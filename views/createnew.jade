extends layout

block content

    - each s in scripts
        script(src=s)

        .create-view
            form(class="create-doc-options", action="/profile/mymusic/document1")
                h1 Create New Document
                label(for="title") Title of Piece: <br><input class="long-input" type="text" name="title">
                label(for="composer") <br>Name of Composer: <br><input class="long-input" type="text" name="composer">
                h2 Initial Piece Settings:
                table(class="create-doc-options")
                    tr(class="create-doc-options")
                        td(class="create-doc-options")
                            label(for="notes-per-minute", class="short-label") Notes Per Measure: 
                            input(class="short-input", type="text", name="notes-per-minute")
                        td(class="create-doc-options")
                            label(for="key") Key:
                                select(name="note")
                                    option(value="A") A
                                    option(value="B") B
                                    option(value="C") C
                                    option(value="D") D
                                    option(value="E") E
                                    option(value="F") F
                                    option(value="G") G
                                select(name="sign")
                                    option(value="nat") Natural
                                    option(value="sharp") Sharp
                                    option(value="flat") Flat
                                select(name="majority")
                                    option(value="major") Major
                                    option(value="minor") Minor
                    tr(class="create-doc-options")
                        td(class="create-doc-options")
                            label(for="note-value", class="short-label") Note Value:                            
                            input(class="short-input", type="text", name="note-value")
                label(for="instruments") Composing for Instruments:
                input(class="long-input", name="instruments", type="text", id="instruments")
                button(type="submit", class="submit-button",value="Create"): p Create
                input(type="button", class="cancel-button", onClick="location.href='/profile/mymusic'", value="Cancel")
