extends layout

block content

    - each s in scripts
        script(src=s)

        .create-view
            form(class="create-doc-options")
                h1 Create New Document
                label(for="title") Title of Piece: <br><input class="long-input" type="text" name="title">
                label(for="composer") <br>Name of Composer: <br><input class="long-input" type="text" name="composer">
                p Initial Piece Settings:
                table(class="create-doc-options")
                    tr(class="create-doc-options", width="400px")
                        td(class="create-doc-options", width="300px")
                            label(for="notes-per-minute") Notes Per Measure: <input class="short-input" type="text" name="notes-per-minute">

                        td(class="create-doc-options", width="100px")
                            label(for="key") Key:
                                select(name="note")
                                    option(value="A") A
                                    option(value="B") B
                                    option(value="C") C
                                    option(value="D") D
                                    option(value="E") E
                                    option(value="F") F
                                    option(value="G") G
                                select(name="sign")
                                    option(value="nat") Natural
                                    option(value="sharp") Sharp
                                    option(value="flat") Flat
                                select(name="majority")
                                    option(value="major") Major
                                    option(value="minor") Minor

                    tr(class="create-doc-options")
                        td(class="create-doc-options")
                            label(for="note-value") Note Value: <input class="short-input" type="text" name="note-value">

                label(for="instruments") Composing for Instruments:
                            <br><input class="long-input" name="instruments" type="text" id="instruments"></br>
                button(type="submit", class="submit-button",value="Create"): a(href="/profile/mymusic/document1") Create
                button(type="button", class="cancel-button", value="Cancel"): a(href="/profile/mymusic") Cancel

