extends layout
link(rel='stylesheet', href='//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css')


block content
    script(src="//code.jquery.com/jquery-1.10.2.js")
    script(src="//code.jquery.com/ui/1.11.4/jquery-ui.js")
    script(src='../routes/createnew.js')
    p Here the user specifies their settings for creating new documents.

    .container
        .create-view
            h1 Create New Document
                form(class="create-doc-options")
                    label(for="title") Title of Piece: <br><input type="text" name="title"></br>
                        label(for="composer") Name of Composer: <br><input type="text" name="composer"></br>

                            Initial Piece Settings:
                                table(class="create-doc-options")
                                    tr(class="create-doc-options", width="400px")
                                        td(class="create-doc-options", width="300px")
                                            label(for="notes-per-minute") Notes Per Measure: </label> <input type="text" name="notes-per-minute">

                                                td(class="create-doc-options", width="100px")
                                                    label(for="key") Key:
                                                        select(name="key")
                                                            option(value="A") A
                                                                option(value="B") B
                                                                option(value="C") C
                                                                option(value="D") D
                                                                option(value="E") E
                                                                option(value="F") F
                                                                option(value="G") G
                                                                option(value="H") H
                                                                option(value="I") I
                                                                option(value="J") J
                                                                option(value="K") K
                                                                option(value="L") L
                                                                option(value="M") M
                                                                option(value="N") N
                                                                option(value="O") O
                                                                option(value="P") P
                                                                option(value="Q") Q
                                                                option(value="R") R
                                                                option(value="S") S
                                                                option(value="T") T
                                                                option(value="U") U
                                                                option(value="V") V
                                                                option(value="W") W
                                                                option(value="X") X
                                                                option(value="Y") Y
                                                                option(value="Z") Z


                                        tr(class="create-doc-options")
                                            td(class="create-doc-options")
                                                label(for="note-value") Note Value: </label> <input type="text" name="note-value">

                                label(for="instruments") Composing for Instruments:
                                <br><input name="instruments" id="instruments"></br>
                                button(type="submit", value="Create"): a(href="/profile/mymusic/document1") Create
                                button(type="button", value="Cancel"): a(href="/profile/mymusic") Cancel
